#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main() 
{
    int n,t,x;
    scanf("%d",&t);
    for(x=0;x<t;x++)
    {
    int h=1;
    scanf("%d",&n);
    for(int i=0;i<n;i++)
    {
    
       
            if(i%2==0)
            {   
                h=h*2;
                
            }
            else
            {
                h=h+1;
                   
              }
      
        }
          printf("%d\n",h);
}
    return 0;
}
