#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    int n,a,r;
    scanf("%d",&n);
    if(n%2==0)
    {
        r=n/2 -1;
        a=pow(3,r);
        printf("%d",a);
    }
    else
    {
        r=n/2;
        a=pow(2,r);
        printf("%d",a);
    }

    return 0;
}
